<%= form_for(campaign) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Campaign Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
        
  <div class="form-group">
    <%= f.label :start_at, "start_at" %>
    <div class="input-group date datetimepicker">
      <%= f.text_field :start_at, class: "form-control", placeholder: "YYYY/MM/DD HH:mm" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
      
  <div class="form-group">
    <%= f.label :end_at, "end_at" %>
    <div class="input-group date datetimepicker">
      <%= f.text_field :end_at, class: "form-control", placeholder: "YYYY/MM/DD HH:mm" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :limit_start, "limit_start" %>
    <%= f.text_field :limit_start, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :movie_url, "movie_url" %>
    <%= f.text_field :movie_url, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :cuepoint1, "cuepoint1" %>
    <%= f.check_box :cuepoint1 %>
  </div>
  
  <div class="form-group">
    <%= f.label :cuepoint2, "cuepoint2" %>
    <%= f.check_box :cuepoint2 %>
  </div>
  
  <div class="form-group">
    <%= f.label :cuepoint3, "cuepoint3" %>
    <%= f.check_box :cuepoint3 %>
  </div>
  
  <div class="form-group">
    <%= f.label :cuepoint4, "cuepoint4" %>
    <%= f.check_box :cuepoint4 %>
  </div>
  
  <div class="form-group">
    <%= f.label :cuepoint5, "cuepoint5" %>
    <%= f.check_box :cuepoint5 %>
  </div>
  
   <%= f.submit "Submit", class: "btn btn-primary"%>
   
<% end %>